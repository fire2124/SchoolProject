<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityOne"
    tools:ignore="VectorDrawableCompat">

    <Button
        android:id="@+id/sensorButton"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="387dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/colorbutton"
        android:text="Sensor"
        android:textSize="29dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Activity One"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_movie"
        android:layout_width="181dp"
        android:layout_height="58dp"
        android:layout_above="@+id/tv_movie1"
        android:layout_alignStart="@+id/tv_movie1"
        android:layout_alignEnd="@+id/tv_movie1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="14dp"
        android:text="Čislo autobusu"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

    <TextView
        android:id="@+id/tv_movie1"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:layout_above="@+id/tv_movie2"
        android:layout_alignStart="@+id/tv_movie2"
        android:layout_alignEnd="@+id/tv_movie2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="23dp"
        android:text="Začiatočná zastávka"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie2"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/tv_movie2"
        android:layout_width="181dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="190dp"
        android:text="Konečná zastávka"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie"
        app:layout_constraintVertical_bias="0.058" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/colorbutton"
        app:srcCompat="@drawable/ic_home_black_24dp"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:background="@drawable/colorbutton"
        app:srcCompat="@drawable/map"
        />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="@drawable/colorbutton"
        app:srcCompat="@drawable/ic_directions_bus_black_24dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_movie"
        android:layout_alignBottom="@+id/tv_movie"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-2dp"
        android:layout_toStartOf="@+id/tv_movie"
        app:srcCompat="@drawable/bus_black_25dp" />

</RelativeLayout>
