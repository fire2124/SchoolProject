<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#ae5485"
                android:startColor="#ae5485" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#500000"
                android:startColor="#E00000" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#b72d79"
                android:centerColor="#b72d79"
                android:endColor="#b72d79"/>
        </shape>
    </item>
</selector>